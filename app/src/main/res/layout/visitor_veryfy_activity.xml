<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.User.VisitorVerifyActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/llBack"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:background="@drawable/ic_action_back"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Your Visit Detail"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llStep"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:orientation="horizontal"
        android:background="@drawable/toolbar_background"
        android:gravity="center"
        android:paddingTop="@dimen/_5sdp"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:id="@+id/llHome"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/home"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@color/white"/>

        <LinearLayout
            android:id="@+id/llSearch"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/white"
                android:padding="@dimen/_3sdp"
                android:gravity="center"
                android:background="@drawable/transperant_square"
                tools:ignore="HardcodedText" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/walking"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Check Out"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/white"
                android:gravity="center"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/_10sdp"
            tools:ignore="RtlHardcoded">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Confirm"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/white"
                android:gravity="center"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llStep"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp"
                            android:visibility="gone"
                            tools:ignore="UselessParent">

                            <RelativeLayout
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/imgBackGround"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/back_image_4" />

                                <TextView
                                    android:id="@+id/txtId"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="150"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp"
                                    android:paddingTop="@dimen/_12sdp"
                                    tools:ignore="HardcodedText" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/txtMessege"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center"
                                android:text="@string/confirm"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">

                                    <FrameLayout
                                        android:layout_width="@dimen/_70sdp"
                                        android:layout_height="@dimen/_70sdp"
                                        android:layout_marginTop="@dimen/_10sdp">

                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/imgProfile"
                                            android:layout_width="@dimen/_70sdp"
                                            android:layout_height="@dimen/_70sdp"
                                            android:layout_gravity="center_horizontal"
                                            android:src="@color/colorPrimaryDark" />

                                        <ImageView
                                            android:id="@+id/imgDone"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_gravity="bottom|right"
                                            android:src="@drawable/done"
                                            android:visibility="gone"
                                            tools:ignore="ContentDescription,RtlHardcoded" />
                                    </FrameLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:orientation="vertical"
                                    tools:ignore="RtlHardcoded">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="@dimen/_55sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Name"
                                            android:textColor="@color/darkGray"
                                            android:textSize="@dimen/_12sdp"
                                            tools:ignore="HardcodedText" />

                                        <TextView
                                            android:id="@+id/txtName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_3sdp"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="@dimen/_5sdp"
                                            android:text="Krunal Nizama"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_14sdp"
                                            android:textStyle="bold"
                                            tools:ignore="HardcodedText,RtlSymmetry" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:layout_width="@dimen/_55sdp"
                                            android:layout_height="wrap_content"
                                            android:text="From"
                                            android:textColor="@color/darkGray"
                                            android:textSize="@dimen/_12sdp"
                                            tools:ignore="HardcodedText" />

                                        <TextView
                                            android:id="@+id/txtComingFrom"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_3sdp"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="@dimen/_5sdp"
                                            android:text="Shivranjani , Ahmedab , Gujarat"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_14sdp"
                                            tools:ignore="HardcodedText,RtlSymmetry" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:layout_width="@dimen/_55sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Purpose"
                                            android:textColor="@color/darkGray"
                                            android:textSize="@dimen/_12sdp"
                                            tools:ignore="HardcodedText" />


                                        <TextView
                                            android:id="@+id/txtPurpose"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_3sdp"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="@dimen/_5sdp"
                                            android:text="Official"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_14sdp"
                                            tools:ignore="HardcodedText,RtlSymmetry" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:layout_width="@dimen/_55sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Mobile"
                                            android:textColor="@color/darkGray"
                                            android:textSize="@dimen/_12sdp"
                                            tools:ignore="HardcodedText" />


                                        <TextView
                                            android:id="@+id/txtMobile"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_3sdp"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="@dimen/_5sdp"
                                            android:text="7405283868"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_14sdp"
                                            tools:ignore="HardcodedText,RtlSymmetry" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:id="@+id/txtRegisterOrVisit"
                                            android:layout_width="@dimen/_55sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Visited On"
                                            android:textColor="@color/darkGray"
                                            android:textSize="@dimen/_12sdp"
                                            tools:ignore="HardcodedText" />


                                        <TextView
                                            android:id="@+id/txtRegisterOn"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_3sdp"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="@dimen/_5sdp"
                                            android:text="18-02-2018"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_14sdp"
                                            tools:ignore="HardcodedText,RtlSymmetry" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llLeft"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:visibility="gone">

                                        <TextView
                                            android:layout_width="@dimen/_55sdp"
                                            android:layout_height="wrap_content"
                                            android:text="Left On"
                                            android:textColor="@color/darkGray"
                                            android:textSize="@dimen/_13sdp"
                                            tools:ignore="HardcodedText" />


                                        <TextView
                                            android:id="@+id/txtLeftOn"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_3sdp"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="@dimen/_5sdp"
                                            android:text="18-02-2018"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_14sdp"
                                            tools:ignore="HardcodedText,RtlSymmetry" />
                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <Button
                                android:id="@+id/btnConfirm"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/button_background"
                                android:text="Confirm"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13sdp"
                                tools:ignore="HardcodedText,ObsoleteLayoutParam" />

                        </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llStep">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#30000000"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/progressbar_background"
            android:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>
