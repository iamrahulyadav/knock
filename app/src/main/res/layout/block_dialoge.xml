<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rdg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <RadioButton
            android:id="@+id/rbNotHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/REASON1" />

        <RadioButton
            android:id="@+id/rbBusy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/REASON2" />

        <RadioButton
            android:id="@+id/rbParcel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/REASON3" />

        <RadioButton
            android:id="@+id/rbOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/REASON4" />
    </RadioGroup>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reason"
        android:imeOptions="actionDone"
        android:inputType="text"
        app:met_baseColor="@color/colorAccent"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/colorAccent"
        app:met_textColor="@color/black"
        app:met_textColorHint="@color/gray"
        app:met_underlineColor="@color/black"
        tools:ignore="HardcodedText"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="right"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/colorAccent"
            android:text="Cancel"
            android:gravity="right"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtAdd"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/colorPrimary"
            android:text="Confirm"
            android:gravity="right"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</LinearLayout>